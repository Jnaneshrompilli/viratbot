<?xml version="1.0" encoding="UTF-8"?>
<robot name="viratbot" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <link name="chassis">

        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.2" />
            <geometry>
                <box size="0.8 0.4 0.2" />
            </geometry>
        </collision>

        <visual>
            <origin rpy=" 0 0 0" xyz="0 0 0.2" />
            <geometry>
                <box size="0.8 0.4 0.2" />
            </geometry>
        </visual>

        <collision>
            <origin xyz=" -0.3 0 0.1" rpy="0 0 0" />
            <geometry>
                <sphere radius="0.1" />
            </geometry>
        </collision>

        <visual>
            <origin xyz=" 0.3 0 0.1" rpy="0 0 0" />
            <geometry>
                <sphere radius="0.1" />
            </geometry>
        </visual>

    </link>

    <link name="right_wheel">

        <collision>
            <origin xyz="-0.2 0.26 0.2" rpy="0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.2" length="0.1" />
            </geometry>
        </collision>

        <visual>
            <origin xyz="-0.2 0.26 0.2" rpy="0 1.5707 1.5705"/>
            <geometry>
                <cylinder radius="0.2" length="0.1" />
            </geometry>
        </visual>

    </link>

    <link name="left_wheel">

        <collision>
            <origin xyz="-0.2 -0.26 0.2" rpy="0 1.5707 1.5707"/>
            <geometry>
                <cylinder radius="0.2" length="0.1" />
            </geometry>
        </collision>

        <visual>
            <origin xyz="-0.2 -0.26 0.2" rpy="0 1.5707 1.5705"/>
            <geometry>
                <cylinder radius="0.2" length="0.1" />
            </geometry>
        </visual>

    </link>

    <joint name="right_wheel_hinge" type="continuous">
        <parent link="chassis" />
        <child link="right_wheel" />
    </joint>

    <joint name="left_wheel_hinge" type="continuous">
        <parent link="chassis" />
        <child link="left_wheel" />
    </joint>

</robot>