<?xml version="1.0"?>
<robot name="viratbot" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="$(find viratbot_description)/urdf/viratbot.gazebo.xacro"/>

    <link name="base_link"></link>

    <link name="chassis">

        <inertial>
            <mass value="3" />
            <inertia ixx="0.05" ixy="0" ixz="0" iyy="0.17" iyz="0" izz="0.2" />
            <origin xyz="0 0 0.2" rpy="0 0 0" />
        </inertial>

        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.2" />
            <geometry>
                <box size="0.8 0.4 0.2" />
            </geometry>
        </collision>

        <visual>
            <origin rpy=" 0 0 0" xyz="0 0 0.2" />
            <geometry>
                <box size="0.8 0.4 0.2" />
            </geometry>
        </visual>

        <collision>
            <origin xyz="0.3 0 0.1" rpy="0 0 0" />
            <geometry>
                <sphere radius="0.1" />
            </geometry>
        </collision>

        <visual>
            <origin xyz=" 0.3 0 0.1" rpy="0 0 0" />
            <geometry>
                <sphere radius="0.1" />
            </geometry>
        </visual>

        <visual>
            <origin xyz="0.3 0 0.43" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.03" length="0.5" />
            </geometry>
        </visual>

    </link>

    <link name="right_wheel">

        <inertial>
            <mass value="0.3" />
            <inertia ixx="0.0325" ixy="0" ixz="0" iyy="0.006" iyz="0" izz="0.0325" />
            <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
        </inertial>

        <collision>
            <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
            <geometry>
                <cylinder radius="0.2" length="0.1" />
            </geometry>
        </collision>

        <visual>
            <origin xyz="0 0 0" rpy="0 1.5707 1.5705" />
            <geometry>
                <cylinder radius="0.2" length="0.1" />
            </geometry>
        </visual>

    </link>

    <link name="left_wheel">

        <inertial>
            <mass value="0.3" />
            <inertia ixx="0.0325" ixy="0" ixz="0" iyy="0.006" iyz="0" izz="0.0325" />
            <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
        </inertial>

        <collision>
            <origin xyz="0 0 0" rpy="0 1.5707 1.5707" />
            <geometry>
                <cylinder radius="0.2" length="0.1" />
            </geometry>
        </collision>

        <visual>
            <origin xyz="0 0 0" rpy="0 1.5707 1.5705" />
            <geometry>
                <cylinder radius="0.2" length="0.1" />
            </geometry>
        </visual>

    </link>

    <joint name="base_chassis_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis" />
    </joint>

    <joint name="right_wheel_hinge" type="continuous">
        <parent link="chassis" />
        <child link="right_wheel" />
        <axis xyz="0 1 0" />
        <origin xyz="-0.2 0.26 0.2" rpy="0 0 0" />
    </joint>

    <joint name="left_wheel_hinge" type="continuous">
        <parent link="chassis" />
        <child link="left_wheel" />
        <axis xyz="0 1 0" />
        <origin xyz="-0.2 -0.26 0.2" rpy="0 0 0" />
    </joint>

    <link name="camera">

        <inertial>
            <mass value="0.05" />
            <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.0005" />
        </inertial>

        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="0.05 0.05 0.05" />
            </geometry>
        </collision>

        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="0.05 0.05 0.05" />
            </geometry>
        </visual>

    </link>

    <joint name="camera_joint" type="fixed">

        <axis xyz="0 0 1" />
        <origin xyz="0.35 0 0.6" rpy="0 0.5 0" />
        <parent link="chassis"/>
        <child link="camera" />

    </joint>

</robot>